<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mobile_navigation.xml"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.ofppt.chatflow.screen.splash.SplashFragment"
        android:label="SplashFragment">

        <action
            android:id="@+id/action_splashFragment_to_onboardingFragment"
            app:destination="@id/onboardingFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        
        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />

    </fragment>
    
    <fragment
        android:id="@+id/onboardingFragment"
        android:name="com.ofppt.chatflow.screen.onboarding.OnboardingFragment"
        android:label="OnboardingFragment">

        <action
            android:id="@+id/action_onboardingFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:popUpTo="@id/onboardingFragment"
            app:popUpToInclusive="true" />
            
    </fragment>

    <fragment
        android:id="@+id/authFragment"
        android:name="com.ofppt.chatflow.screen.auth.AuthFragment"
        android:label="AuthFragment">

        <action
            android:id="@+id/action_authFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/authFragment"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.ofppt.chatflow.screen.main.MainFragment" 
        android:label="MainFragment">

        <action
            android:id="@+id/action_mainFragment_to_chatFragment"
            app:destination="@id/chatFragment">

            <argument
                android:name="userName"
                app:argType="string" />

            <argument
                android:name="userImage"
                app:argType="string" />
        </action>

        <action
            android:id="@+id/action_mainFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true" />

        <action
            android:id="@+id/action_mainFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />

    </fragment>

    <fragment
        android:id="@+id/chatFragment"
        android:name="com.ofppt.chatflow.screen.chat.ChatFragment"
        android:label="fragment_chat">
            <argument
                android:name="userName"
                app:argType="string" />

            <argument
                android:name="userImage"
                app:argType="string" />
    </fragment>

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.ofppt.chatflow.screen.settings.SettingsFragment"
        android:label="SettingsFragment">
        
        <action
            android:id="@+id/action_settingsFragment_to_authFragment"
            app:destination="@id/authFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true" />
            
    </fragment>
</navigation>